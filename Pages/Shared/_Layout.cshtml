<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - samkørselApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SamkørselApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" asp-page="/Index">SchengenRide</a>
                    <a class="nav-link text-dark" asp-page="/Index">Home</a>
                            <span class="nav-link">|</span>
                    <a class="nav-link text-dark" asp-controller="Route" asp-action="Index">Create Route</a>
                </div>
                <div class="ms-auto">
                    <div class="d-flex align-items-center">
                        @if (Context.Session.GetString("IsLoggedIn") == "true")
                        {
                            <span class="nav-link text-dark">Welcome, @Context.Session.GetString("UserName")</span>
                            <span class="nav-link">|</span>
                            <a class="nav-link text-dark" asp-controller="Booking" asp-action="BookingRequests">Requests</a>
                            <span class="nav-link">|</span>
                            <a class="nav-link text-dark position-relative" asp-controller="Chat" asp-action="Index" title="Chat">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                </svg>
                                @await Component.InvokeAsync("UnreadMessages")
                            </a>
                            <span class="nav-link">|</span>
                            <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">Profile</a>
                            <span class="nav-link">|</span>
                            <a class="nav-link text-dark" asp-controller="LogIn" asp-action="Logout">Log Out</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-controller="LogIn" asp-action="Index">Log In</a>
                            <span class="nav-link">|</span>
                            <a class="nav-link text-dark" asp-controller="SignIn" asp-action="Index">Sign In</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - samkørselApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
