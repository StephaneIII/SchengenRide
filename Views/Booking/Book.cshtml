@model SamkørselApp.Controllers.RouteViewModel
@{
    ViewData["Title"] = "Book Route";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Book Your Seat</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Route Details</h5>
                            <p><strong>From:</strong> @Model.StartCity</p>
                            <p><strong>To:</strong> @Model.EndCity</p>
                            <p><strong>Departure:</strong> @Model.Departure.ToString("dd MMM yyyy, HH:mm")</p>
                            @if (Model.Arrival.HasValue)
                            {
                                <p><strong>Arrival:</strong> @Model.Arrival.Value.ToString("dd MMM yyyy, HH:mm")</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <h5>Trip Info</h5>
                            <p><strong>Driver:</strong> @Model.DriverName</p>
                            <p><strong>Vehicle:</strong> @Model.VehicleName</p>
                            <p><strong>Available Seats:</strong> 
                                <span class="badge bg-success">@Model.RemainingSeats of @Model.TotalSeats</span>
                            </p>
                            <p><strong>Price per Seat:</strong> 
                                <span class="text-primary fw-bold">€@Model.PricePerSeat.ToString("F2")</span>
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h5>Description</h5>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }

                    <hr />

                    <form asp-action="Book" method="post">
                        <input type="hidden" name="routeId" value="@Model.RouteID" />
                        
                        <div class="row align-items-end">
                            <div class="col-md-4">
                                <label for="seatsToBook" class="form-label">Number of Seats</label>
                                <select class="form-select" id="seatsToBook" name="seatsToBook" onchange="updateTotal()">
                                    @for (int i = 1; i <= Model.RemainingSeats && i <= 10; i++)
                                    {
                                        <option value="@i">@i seat@(i > 1 ? "s" : "")</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Total Price</label>
                                <div class="h4 text-primary" id="totalPrice">€@Model.PricePerSeat.ToString("F2")</div>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">Confirm Booking</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary">← Back to Routes</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var pricePerSeat = @Model.PricePerSeat.ToString(System.Globalization.CultureInfo.InvariantCulture);
        
        function updateTotal() {
            var seats = document.getElementById('seatsToBook').value;
            var total = (seats * pricePerSeat).toFixed(2);
            document.getElementById('totalPrice').textContent = '€' + total;
        }
    </script>
}
