@using SamkÃ¸rselApp.Model
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">My Profile</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(ViewBag.ProfilePictureURL?.ToString()))
                            {
                                <img src="@ViewBag.ProfilePictureURL" alt="Profile Picture" class="img-fluid rounded-circle mb-3" style="max-width: 150px; max-height: 150px;">
                            }
                            else
                            {
                                <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                                    <span class="text-white display-4">@ViewBag.UserName?.ToString().Substring(0, 1).ToUpper()</span>
                                </div>
                            }
                            <h4>@ViewBag.UserName</h4>
                        </div>
                        <div class="col-md-8">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Email:</th>
                                        <td>@ViewBag.Email</td>
                                    </tr>
                                    <tr>
                                        <th>Phone:</th>
                                        <td>@(string.IsNullOrEmpty(ViewBag.Phone?.ToString()) ? "Not provided" : ViewBag.Phone)</td>
                                    </tr>
                                    <tr>
                                        <th>Rating:</th>
                                        <td>
                                            @if (ViewBag.ReviewCount > 0)
                                            {
                                                <div class="d-flex align-items-center">
                                                    <div class="star-display me-2">
                                                        @{
                                                            double averageRating = (double)ViewBag.AverageRating;
                                                            int fullStars = (int)Math.Floor(averageRating);
                                                            bool hasHalfStar = averageRating - fullStars >= 0.5;
                                                            int emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                                        }
                                                        
                                                        @for (int i = 0; i < fullStars; i++)
                                                        {
                                                            <span class="star filled">â˜…</span>
                                                        }
                                                        
                                                        @if (hasHalfStar)
                                                        {
                                                            <span class="star half">â˜†</span>
                                                        }
                                                        
                                                        @for (int i = 0; i < emptyStars; i++)
                                                        {
                                                            <span class="star empty">â˜†</span>
                                                        }
                                                    </div>
                                                    <span class="rating-text">
                                                        @averageRating.ToString("F1") (@ViewBag.ReviewCount review@(ViewBag.ReviewCount == 1 ? "" : "s"))
                                                    </span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No reviews yet</span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Member since:</th>
                                        <td>@(((DateTime)ViewBag.JoinDate).ToString("dd MMM yyyy"))</td>
                                    </tr>
                                </tbody>
                            </table>
                            <a asp-controller="Profile" asp-action="Edit" class="btn btn-primary">Edit Profile</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CO2 Savings Section -->
            <div class="card mt-4">
                <div class="card-header d-flex align-items-center">
                    <h4 class="mb-0 me-2">ðŸŒ± Environmental Impact</h4>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-success mb-1">@string.Format("{0:N0}", ViewBag.TotalCO2Saved ?? 0)g</h3>
                                <small class="text-muted">CO2 Saved</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-primary mb-1">@string.Format("{0:N1}", ViewBag.TotalDistanceKm ?? 0) km</h3>
                                <small class="text-muted">Total Distance</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-info mb-1">@(ViewBag.TotalTripsAsDriver ?? 0)</h3>
                                <small class="text-muted">Trips as Driver</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-warning mb-1">@(ViewBag.TotalTripsAsPassenger ?? 0)</h3>
                                <small class="text-muted">Trips as Passenger</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 text-center">
                        <p class="text-muted mb-1">
                            <strong>How we calculate:</strong> 150g CO2 per km, divided by total people in car (passengers + driver)
                        </p>
                        @if ((ViewBag.TotalCO2Saved ?? 0) > 0)
                        {
                            <p class="text-success">
                                <i class="fas fa-leaf"></i> 
                                You've prevented approximately <strong>@string.Format("{0:N2}", (ViewBag.TotalCO2Saved ?? 0) / 1000) kg</strong> of CO2 from entering the atmosphere!
                            </p>
                        }
                        else
                        {
                            <p class="text-muted">
                                Start carpooling to see your environmental impact!
                            </p>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Vehicles Section -->
            <div class="card mt-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">My Vehicles</h4>
                    @if (ViewBag.Vehicles != null && ((List<Vehicle>)ViewBag.Vehicles).Count < 2)
                    {
                        <a asp-controller="Vehicle" asp-action="Index" class="btn btn-sm btn-success">Add Vehicle</a>
                    }
                </div>
                <div class="card-body">
                    @if (ViewBag.Vehicles != null && ((List<Vehicle>)ViewBag.Vehicles).Count > 0)
                    {
                        <div class="row">
                            @foreach (var vehicle in (List<Vehicle>)ViewBag.Vehicles)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h5 class="card-title">@vehicle.Brand @vehicle.Model</h5>
                                            <p class="card-text">
                                                <strong>Plate:</strong> @vehicle.PlateNumber<br />
                                                <strong>Color:</strong> @vehicle.Color<br />
                                                <strong>Comfort Level:</strong> @vehicle.ComfortLevel / 10
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">You haven't registered any vehicles yet.</p>
                        <a asp-controller="Vehicle" asp-action="Index" class="btn btn-primary">Register Your First Vehicle</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .star-display {
        display: inline-block;
    }
    
    .star {
        font-size: 1.2rem;
        margin-right: 2px;
    }
    
    .star.filled {
        color: #ffc107;
    }
    
    .star.half {
        color: #ffc107;
    }
    
    .star.empty {
        color: #e0e0e0;
    }
    
    .rating-text {
        font-size: 0.95rem;
        color: #6c757d;
    }
</style>
